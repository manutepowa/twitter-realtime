<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <title>Administrador de Tareas</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="/bower_components/angular-chart.js/dist/angular-chart.css">
        <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.0.js"></script>
		<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>
        <script src='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.js'></script>
        <link href='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.css' rel='stylesheet' />
		<script type="text/javascript" src="javascripts/main.js"></script>
        <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
        <script type="text/javascript" src="/bower_components/angular/angular.min.js"></script>
        <script type="text/javascript" src="/bower_components/angular-i18n/angular-locale_es-es.js"></script>
        <script type="text/javascript" src="/bower_components/angular-ui-router/release/angular-ui-router.min.js"></script>
        <script src="/bower_components/Chart.js/Chart.min.js"></script>
        <script type="text/javascript" src="/bower_components/angular-chart.js/dist/angular-chart.js"></script>
        <script src="/bower_components/angular-socket-io/socket.js"></script>
        <script type="text/javascript" src="scripts/appAngular.js"></script>
        <script type="text/javascript" src="scripts/controllers/home.js"></script>
        <script type="text/javascript" src="scripts/controllers/usuarios.js"></script>
        <script type="text/javascript" src="scripts/controllers/stream.js"></script>
        <script type="text/javascript" src="scripts/controllers/mapa.js"></script>
        <script type="text/javascript" src="scripts/controllers/graficos.js"></script>
        
    </head>
<body ng-app="analyticApp">
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper" ng-controller="NavList">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        <span id="logo1">M3</span><span id="logo2">Graph</span>
                    </a>
                </li>
                <li ng-class="navClass('inicio')">
                    <a ui-sref="inicio">
                    	<i class="fa fa-home fa-fw"></i>
                    	<span>inicio</span>
                    </a>
                </li>
                <li ng-class="navClass('stream')">
                    <a ui-sref="stream">
                    	<i class="fa fa-sticky-note fa-fw"></i>
                    	<span>Stream</span>
                    </a>
                </li>
                <li ng-class="navClass('mapa')">
                    <a ui-sref="mapa">
                        <i class="fa fa-map-marker fa-fw"></i>
                        <span>Mapa</span>
                    </a>
                </li>
                <li ng-class="navClass('graficos')">
                    <a ui-sref="graficos">
                        <i class="fa fa-bar-chart fa-fw"></i>
                        <span>Gráficos</span>
                    </a>
                </li>
                <li ng-class="navClass('usuarios')">
                    <a ui-sref="usuarios">
                    	<i class="fa fa-user fa-fw"></i>
                    	<span>Usuarios</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer col-xs-4 col-md-4 col-lg-4">
            	<i class="fa fa-arrow-left col-xs-offset-5 col-md-offset-5 col-lg-offset-5"></i>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
       	<div class="topBar col-lg-12 col-md-12 col-xs-12">
       		<div class="container-fluid">
                <div class="row">
                	<div class="col-lg-6 col-md-6 col-xs-6">
                        <i class="fa fa-user"></i>&nbsp;&nbsp;<span><%= username %></span>
                	</div>
                	<div class="col-lg-6 col-md-6 col-xs-6">
                		<div class="col-lg-2 col-md-2 col-xs-2 pull-right text-center" data-toggle="tooltip" data-placement="left" title="Cerrar sesión">
                            <a href="/logout">
                                <i class="fa fa-sign-out"></i>
                            </a>
                        </div>
                	</div>
                </div>
            </div>
       		
       	</div>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <ui-view></ui-view>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
</body>
</html>
